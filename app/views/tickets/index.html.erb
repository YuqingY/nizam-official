<p id="notice"><%= notice %></p>

<div class="content">
       <div class="row">
         <div class="tabbar col-sm-3">
           <%= link_to "All", tickets_path %>
           <hr>
           <%= link_to "Ready", tickets_path %>
           <hr>
           <%= link_to "Pending", tickets_path %>
           <hr>
           <%= link_to "Active", tickets_path %>
           <hr>
           <%= link_to "New", tickets_path %>
         </div>
         <div class="tickets col-sm-9">
           <table class="table">
             <thead>
               <tr>
                 <th>customer</th>
                 <th>User</th>
                 <th>Category</th>
                 <th>Department</th>
                 <th>Status</th>
                 <th>Next step</th>
               </tr>
             </thead>

             <tbody>
               <% @tickets.each do |ticket| %>
                 <tr>
                   <td><%= ticket.customer_id %></td>
                   <td><%= ticket.author.email %></td>
                   <td><%= ticket.category %></td>
                   <td><%= ticket.department %></td>
                   <td><%= ticket.status %></td>
                   <td><%= ticket.next_step %></td>
                   <td><%= link_to 'Show', ticket %></td>
                   <td><%= link_to 'Edit', edit_ticket_path(ticket) %></td>
                   <td><%= link_to 'Destroy', ticket, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                 </tr>
               <% end %>
             </tbody>
           </table>
           </div>
        </div>
  <span class="green-btn"><%= link_to 'New Ticket', new_ticket_path %></span>
</div>
