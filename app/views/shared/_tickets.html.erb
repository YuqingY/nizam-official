<table class="table" id='ticket-table'>
    <thead>
        <tr>
            <th>customer</th>
            <th>author</th>
            <th>Category</th>
            <th>Department</th>
            <th>Status</th>
            <th>Next step</th>
        </tr>
    </thead>
    <tbody>
        <% Ticket.all.each do |ticket| %>
            <tr>
                <td>
                    <%= ticket.customer.cnic %>
                </td>
                <td>
                    <%= ticket.author.name %>
                </td>
                <td>
                    <%= ticket.category %>
                </td>
                <td>
                    <%= ticket.department %>
                </td>
                <td>
                    <%= ticket.status %>
                </td>
                <td>
                    <%= ticket.next_step %>
                </td>
                <td>
                    <%= link_to 'Show', ticket %>
                </td>
                <td>
                    <%= link_to 'Edit', edit_ticket_path(ticket) %>
                </td>
            </tr>
            <% end %>
    </tbody>
</table>
